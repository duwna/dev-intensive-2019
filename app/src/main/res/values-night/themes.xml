<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent_night</item>

        <item name="colorAccentedSurface">@color/color_divider_light</item>
        <item name="colorIcon">@android:color/white</item>
        <item name="colorDivider">@color/color_divider_dark</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="colorToolbar">@color/color_toolbar_night</item>
        <item name="colorMessage">@color/color_gray</item>
        <item name="colorTitle">@android:color/white</item>
        <item name="colorBackground">@color/color_background_night</item>
        <item name="colorArchiveItemBackground">@color/color_gray_dark</item>
        <item name="colorIndicator">@color/color_accent_night</item>
        <item name="colorCounter">@color/color_gray_dark</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

