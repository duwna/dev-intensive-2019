<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">


	<ImageView
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:srcCompat="@drawable/profile_bg"
			android:id="@+id/imageView2"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
			android:scaleType="centerCrop"
			app:layout_constraintDimensionRatio="16:9"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"
			app:layout_constraintHorizontal_bias="0.0"/>
	<ru.skillbranch.devintensive.ui.custom.CircleImageView
			android:layout_width="@dimen/avatar_round_size"
			android:layout_height="@dimen/avatar_round_size"
			android:src="@drawable/ic_avatar"
			android:id="@+id/iv_avatar"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintTop_toBottomOf="@+id/imageView2"
			app:layout_constraintBottom_toTopOf="@+id/tv_nick_name"
			app:cv_borderWidth="2dp"/>
	<ImageButton
			android:layout_width="@dimen/btn_round_size_40"
			android:layout_height="@dimen/btn_round_size_40" app:srcCompat="@drawable/ic_brightness_high_black_24dp"
			android:id="@+id/btn_switch_theme"
			android:background="@drawable/btn_round_bg" app:layout_constraintTop_toTopOf="@+id/iv_avatar"
			app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
			app:layout_constraintEnd_toStartOf="@+id/iv_avatar" android:layout_marginEnd="32dp"/>
	<ImageButton
			android:layout_width="@dimen/btn_round_size_40"
			android:layout_height="@dimen/btn_round_size_40" app:srcCompat="@drawable/ic_edit_black_24dp"
			android:id="@+id/btn_edit"
			android:background="@drawable/btn_round_bg" app:layout_constraintTop_toTopOf="@+id/iv_avatar"
			app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
			app:layout_constraintStart_toEndOf="@+id/iv_avatar"
			android:layout_marginStart="32dp"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tv_nick_name" style="@style/Profile.Header.Nickname"
			app:layout_constraintTop_toBottomOf="@+id/iv_avatar" android:layout_marginTop="16dp"
			app:layout_constraintStart_toStartOf="@+id/iv_avatar" app:layout_constraintEnd_toEndOf="@+id/iv_avatar"
			tools:text="John Doe" app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintBottom_toTopOf="@+id/tv_rank"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tv_rank" style="@style/Profile.Header.Rank"
			app:layout_constraintTop_toBottomOf="@+id/tv_nick_name"
			app:layout_constraintEnd_toEndOf="@+id/tv_nick_name"
			app:layout_constraintStart_toStartOf="@+id/tv_nick_name" tools:text="Junior android developer"
			app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/imageView2"
			android:layout_marginBottom="32dp"/>
	<View
			android:layout_width="0dp"
			android:layout_height="80dp"
			android:id="@+id/view2"
			android:background="?attr/colorAccentedSurface" app:layout_constraintTop_toBottomOf="@+id/imageView2"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
	<View
			android:layout_width="1dp"
			android:layout_height="0dp"
			android:id="@+id/view6" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/view2" app:layout_constraintBottom_toBottomOf="@+id/view2"
			android:layout_marginTop="16dp" android:layout_marginBottom="16dp"
			android:background="@color/color_divider_light"/>
	<TextView
			android:text="@string/profile_label_rating"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView3" style="@style/Profile.Metrics.Label"
			app:layout_constraintStart_toStartOf="@+id/tv_rating" app:layout_constraintEnd_toEndOf="@+id/tv_rating"
			app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toBottomOf="@+id/tv_rating"
			app:layout_constraintBottom_toBottomOf="@+id/view2"/>
	<TextView
			android:text="@string/profile_label_respect"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView4" style="@style/Profile.Metrics.Label"
			app:layout_constraintStart_toStartOf="@+id/tv_respect"
			app:layout_constraintEnd_toEndOf="@+id/tv_respect"
			app:layout_constraintTop_toBottomOf="@+id/tv_respect" app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintBottom_toBottomOf="@+id/view2"/>
	<TextView
			android:text="0"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tv_rating" style="@style/Profile.Metrics.Value"
			app:layout_constraintTop_toBottomOf="@+id/imageView2"
			app:layout_constraintBottom_toTopOf="@+id/textView3"
			app:layout_constraintVertical_chainStyle="packed" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/view6" app:layout_constraintHorizontal_bias="0.5"
			android:drawableStart="@drawable/ic_sp_24"
			android:drawablePadding="@dimen/spacing_tiny_4"/>
	<TextView
			android:text="0"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tv_respect" style="@style/Profile.Metrics.Value"
			app:layout_constraintTop_toBottomOf="@+id/imageView2"
			app:layout_constraintBottom_toTopOf="@+id/textView4"
			app:layout_constraintVertical_chainStyle="packed" app:layout_constraintStart_toEndOf="@+id/view6"
			app:layout_constraintEnd_toEndOf="parent"
			android:drawableStart="@drawable/ic_respect_24"
			android:drawablePadding="@dimen/spacing_tiny_4"/>
	<ImageView
			android:layout_width="@dimen/btn_round_size_40"
			android:layout_height="@dimen/btn_round_size_40" app:srcCompat="@drawable/ic_avatar"
			android:id="@+id/imageView3"
			app:layout_constraintTop_toBottomOf="@+id/view2"
			android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="16dp"/>
	<com.google.android.material.textfield.TextInputLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
			app:layout_constraintTop_toTopOf="@+id/imageView3"
			android:id="@+id/textInputLayout" app:layout_constraintStart_toEndOf="@+id/imageView3"
			android:layout_marginStart="16dp">

		<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/profile_hint_first_name" android:id="@+id/et_first_name"
				style="@style/Profile.EditText.Single"
				android:inputType="textPersonName"
				android:imeOptions="actionNext"/>
	</com.google.android.material.textfield.TextInputLayout>
	<com.google.android.material.textfield.TextInputLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
			android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="@+id/textInputLayout"
			android:id="@+id/textInputLayout2">

		<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/profile_hint_last_name" android:id="@+id/et_last_name"
				style="@style/Profile.EditText.Single"
				android:inputType="textPersonName"
				android:imeOptions="actionNext"/>
	</com.google.android.material.textfield.TextInputLayout>
	<View
			android:layout_width="0dp"
			android:layout_height="1dp"
			android:id="@+id/devider1" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
			android:layout_marginStart="72dp" android:background="?attr/colorDivider"
			android:layout_marginTop="5dp"/>
	<ImageView
			android:layout_width="@dimen/btn_round_size_40"
			android:layout_height="@dimen/btn_round_size_40"
			app:srcCompat="@drawable/ic_about"
			android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/devider1" android:layout_marginTop="16dp"
			android:layout_marginStart="16dp"/>
	<com.google.android.material.textfield.TextInputLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="@+id/imageView4" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp"
			app:layout_constraintStart_toEndOf="@+id/imageView4" android:layout_marginStart="16dp"
			android:id="@+id/wr_about"
			app:counterMaxLength="128">

		<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/profile_hint_about" android:id="@+id/et_about"
				style="@style/Profile.EditText.MultiLine"/>
	</com.google.android.material.textfield.TextInputLayout>

	<View
			android:layout_width="0dp"
			android:layout_height="1dp"
			android:id="@+id/devider2" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="72dp" android:background="?attr/colorDivider"
			app:layout_constraintTop_toBottomOf="@+id/wr_about" android:layout_marginTop="5dp"/>
	<ImageView
			android:layout_width="@dimen/btn_round_size_40"
			android:layout_height="@dimen/btn_round_size_40"
			app:srcCompat="@drawable/ic_repo"
			android:id="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/devider2" android:layout_marginTop="16dp"
			android:layout_marginStart="16dp"/>
	<com.google.android.material.textfield.TextInputLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toEndOf="@+id/imageView5" app:layout_constraintTop_toTopOf="@+id/imageView5"
			android:id="@+id/wr_repository" android:layout_marginStart="16dp"
			app:layout_constraintEnd_toStartOf="@+id/ic_eye">

		<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/profile_hint_repository" android:id="@+id/et_repository"
				style="@style/Profile.EditText.Single"
				android:inputType="textUri"
				android:imeOptions="actionDone"/>
	</com.google.android.material.textfield.TextInputLayout>
	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:srcCompat="@drawable/ic_eye_24dp"
			android:id="@+id/ic_eye"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="@+id/wr_repository"
			app:layout_constraintBottom_toBottomOf="@+id/wr_repository"
			app:layout_constraintStart_toEndOf="@+id/wr_repository" android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
		<!--</ScrollView>-->